<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2024-11-10--0002-add-faculty-to-batch" author="PinkyZeus">
        <validCheckSum>ANY</validCheckSum>
        
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="batch"/>
            <not>
                <columnExists tableName="batch" columnName="faculty_id"/>
            </not>
        </preConditions>

        <addColumn tableName="batch">
            <column name="faculty_id"
                    type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="batch" 
                                 baseColumnNames="faculty_id" 
                                 constraintName="fk_batch_faculty"
                                 referencedTableName="faculty"
                                 referencedColumnNames="id" 
                                 onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>

